---
import Layout from "../../layouts/Layout.astro";
import Noticias from "../../data/noticias.json";

export async function getStaticPaths() { /* Se obtiene las noticias con el ID */
    return Noticias.noticias.map((noticia) => { // aqui se mapean las noticias
        const id = noticia.href.replace("/blog/", ""); // Aqui se obtiene la ID
        return {  // aca se devuelve el ID
            params: { id: id },
            props: { noticia } // aca se pasa la noticia
        };
})
;}

const { noticia } = Astro.props; // aca pasamos las propiedades del JSON de noticias
---

<Layout>
    <!-- Sección Hero -->
    <section class="py-12 bg-linear-to-br from-red-600 to-red-800 text-white">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row gap-6 items-center">
                <img src={noticia.imagen} alt={noticia.titulo} class="w-full md:w-1/3 h-48 object-cover rounded-lg shadow-md" />
                <div class="md:w-2/3">
                    <span class="inline-block bg-white/20 text-white px-3 py-1 rounded-full text-sm mb-3">
                        {noticia.categoria}
                    </span>
                    <h1 class="text-3xl md:text-4xl font-bold mb-2">{noticia.titulo}</h1>
                    <p class="text-sm text-white/90">
                        {noticia.fecha} - {noticia.tiempo_lectura}
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!--Sección del contenido -->
    <section class="py-10 bg-white">
        <div class="container mx-auto px-4 max-w-3xl">
        {noticia.contenido.map((item) => {
            switch (item.tipo) {
                case "subtitulo":
                    return <h2 class="text-2xl font-bold text-gray-800 mt-8 mb-4">{item.texto}</h2>;
                    break;
                case "parrafo":
                    return <p class="text-gray-700 leading-relaxed mb-4">{item.texto}</p>;
                    break;
                case "cita":
                    return <blockquote class="border-l-4 border-red-600 pl-4 italic text-gray-800 bg-red-50 py-3 px-4 rounded-md mb-4">{item.texto}</blockquote>;
                    break;
                case "lista":
                    return (
                        <div class="mb-6">
                            <h3 class="text-xl font-semibold text-gray-800 mb-2">{item.titulo}</h3>
                            <ul class="list-disc list-inside space-y-1 text-gray-700">
                                {item.items?.map((item)=>(
                                    <li>{item}</li>
                                ))}
                            </ul>
                        </div>
                    );
                    break;
                default:
                    return null;
            }
        })}

            <div class="mt-10">
                <a href="/blog" class="inline-block bg-red-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-lg transition duration-300">← Volver al Blog</a>
            </div>
        </div>
    </section>
</Layout>