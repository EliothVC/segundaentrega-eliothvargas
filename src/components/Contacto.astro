---
import { contacto } from "../data/Hero.ts";
import { formulario, info, red, emergencia, mapa, oficinas } from "../data/Contacto.ts";
---

<section class="py-12 bg-linear-to-r from-blue-800 to-blue-600 text-white">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4">{contacto.titulo}</h1>
        <p class="text-lg sm:text-xl md:text-2xl max-w-3xl mx-auto">{contacto.subtitulo}</p>
    </div>
</section>

<section class="py-12 sm:py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
            <!-- Formulario de Contacto -->
            <div class="bg-gray-50 rounded-lg shadow-sm p-6 sm:p-8">
                <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-6">Envíenos un mensaje</h2>
                <form class="space-y-6">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                        {formulario.campos.slice(0, 2).map((campo)=>(
                            <div>
                                <label for={campo.id} class="block text-sm font-medium text-gray-700 mb-2">
                                    {campo.label}
                                </label>
                                <input id={campo.id} class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" placeholder={campo.placeholder} required={campo.required}/>
                            </div>
                        ))}
                    </div>

                    <div>
                        <label for="telefono" class="block text-sm font-medium text-gray-700 mb-2">
                            {formulario.campos[2].label}
                        </label>
                        <input id={formulario.campos[2].id} class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" placeholder={formulario.campos[2].placeholder}/>
                    </div>

                    <div>
                        <label for="asunto" class="block text-sm font-medium text-gray-700 mb-2">Asunto</label>
                        <select id="asunto" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                            {formulario.asuntos.map((asunto)=>(
                                <option value={asunto.valor}>{asunto.texto}</option>
                            ))}
                        </select>
                    </div>

                    <div>
                        <label for="mensaje" class="block text-sm font-medium text-gray-700 mb-2">
                            {formulario.campos[3].label}
                        </label>
                        <textarea id="mensaje" rows="5" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" placeholder={formulario.campos[3].placeholder} required={formulario.campos[3].required}></textarea>
                    </div>

                    <button type="submit" class="w-full bg-red-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300">
                        Enviar Mensaje
                    </button>
                </form>
            </div>

            <!-- Información de Contacto -->
            <div class="space-y-8">
                <div class="bg-gray-50 rounded-lg shadow-sm p-6 sm:p-8">
                    <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-6">Información de contacto</h2>

                    <div class="space-y-6">
                        {info.map((item)=>(
                            <div class="flex items-start">
                                <div class="w-10 h-10 rounded-full bg-blue-700 text-white flex items-center justify-center mr-4 mt-1">
                                    {item.id}
                                </div>
                                <div>
                                    <h3 class="font-bold text-gray-800 text-lg">{item.titulo}</h3>
                                    <p class="text-gray-600">{item.contenido}</p>
                                </div>
                            </div>
                        ))}
                    </div>

                    <div class="mt-8">
                        <h3 class="font-bold text-gray-800 text-lg mb-4">Redes Sociales</h3>
                        <div class="flex space-x-4">
                            {red.map((red)=>(
                                <a href={red.url} class="hover:text-blue-400 transition duration-300" target="_blank" rel="noopener noreferrer">{red.nombre}</a>
                            ))}
                        </div>
                    </div>
                </div>

                <!--Información de Emergencia -->
                <div class="bg-blue-50 rounded-lg shadow-sm p-6 sm:p-8">
                    <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mb-4">Contacto de Emergencia</h2>
                    <div class="space-y-4">
                        {emergencia.map((item)=>(
                            <div class="flex items-center">
                                <div class={`w-8 h-8 rounded-full ${item.color} text-white flex items-center justify-center mr-3`}>
                                    {item.id}
                                </div>
                                <div>
                                    <h3 class="font-bold text-gray-800">{item.servicio}</h3>
                                    <p class="text-gray-600">{item.telefono}</p>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mapa de Ubicación -->
<section class="py-12 sm:py-16 bg-gray-100">
    <div class="container mx-auto px-4">
        <h2 class="text-2xl sm:text-3xl font-bold text-center text-gray-800 mb-8">{mapa.titulo}</h2>
        <div class="rounded-lg overflow-hidden shadow-md">
            <iframe 
                src={mapa.src}
                width={mapa.ancho}
                height={mapa.alto}
                style="border:0;"
                allowfullscreen
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                class="w-full"
            ></iframe>
        </div>
    </div>
</section>

<!--Oficinas Municipales -->
<section class="py-12 sm:py-16 bg-white">
    <div class="container mx-auto px-4">
        <h2 class="text-2xl sm:text-3xl font-bold text-center text-gray-800 mb-8">Oficinas Municipales</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
            {oficinas.map((item)=>(
                <div class="bg-gray-50 rounded-lg shadow-sm p-6 transition duration-300 hover:shadow-lg transform hover:-translate-y-1.5">
                    <div class="w-12 h-12 rounded-full bg-red-500 text-white flex items-center justify-center mb-4">
                        {item.siglas}
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">{item.nombre}</h3>
                    <p class="text-gray-600 mb-2">{item.direccion}</p>
                    <p class="text-gray-600 mb-4">{item.telefono}</p>
                </div>
            ))}
        </div>
    </div>
</section>