---
import { historia } from '../data/Hero.ts';
import { navegador, introduccion, fundacion, desarrollo, patrimonio, navegacion } from '../data/Historia.ts';
---

<section class="py-16 bg-linear-to-r from-green-600 to-green-800 text-white">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">{historia.titulo}</h1>
        <p class="text-xl max-w-3xl mx-auto">{historia.subtitulo}</p>
    </div>
</section>

<section class="py-12 bg-white">
    <div class="container mx-auto px-4">
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Navegación Lateral -->
            <div class="lg:w-1/4">
                <div class="bg-gray-50 p-6 rounded-lg shadow-sm sticky top-32">
                    {navegador.map((item)=>(
                        <h3 class="text-lg font-bold text-gray-800 mb-4">{item.titulo}</h3>
                        <ul class="space-y-2">
                            <li><a href={item.href} class="text-gray-700 hover:text-red-600 transition duration-300 block py-1">{item.subtitulo}</a></li>
                        </ul>
                    ))}
                </div>
            </div>

            <!-- Contenido -->
            <div class="lg:w-3/4">
                <!-- Introducción -->
                <div id="introducción" class="mb-12">
                    <h2 class="text-3xl font-bold text-gray-800 mb-6">{navegador[0].subtitulo}</h2>

                    <div class="border-l-4 border-red-600 bg-gray-50 p-6 my-6 italic">
                        <p class="text-gray-700">{introduccion.parrafo1}</p>
                        <p class="text-gray-600 mt-2">{introduccion.texto1}</p>
                    </div>

                    <p class="text-gray-700 mb-4">{introduccion.parrafo2}</p>
                </div>

                <!-- Fundación e historia temprana -->
                <div id="fundacion" class="mb-12">
                    <h2 class="text-3xl font-bold text-gray-800 mb-6">{navegador[1].subtitulo}</h2>

                    {fundacion.map((item)=>(
                        <div class="relative pl-8 border-l-4 border-red-600 ml-4">
                            <div class="absolute -left-2.5 top-2 w-4 h-4 rounded-full bg-red-600 border-4 border-white"/>
                            <h3 class="text-xl font-bold text-gray-800 mb-2">{item.titulo}</h3>
                            <p class="text-gray-700 mb-6">{item.parrafo}</p>
                        </div>
                    ))}
                </div>

                <!-- Desarrollo Urbano y Economico -->
                <div id="desarrollo" class="mb-12">
                    <h2 class="text-3xl font-bold text-gray-800 mb-6">{navegador[2].subtitulo}</h2>
                    <p class="ext-gray-700 mb-4">{desarrollo.parrafo}</p>
                    <p class="text-gray-700">{desarrollo.texto}</p>
                </div>

                <!--Patrimonio Cultural-->
                <div id="patrimonio" class="mb-12">
                    <h2 class="text-3xl font-bold text-gray-800 mb-6">{navegador[3].subtitulo}</h2>
                    <p class="text-gray-700 mb-4">{patrimonio.parrafoInicial}</p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 my-8">
                        {patrimonio.destacados.map((item)=>(
                            <div class="bg-gray-100 p-6 rounded-lg">
                                <h3 class="text-xl font-bold text-gray-800 mb-2">{item.titulo}</h3>
                                <p class="text-gray-700">{item.contenido}</p>
                            </div>
                        ))}
                    </div>

                    {patrimonio.parrafos.map((item)=>(
                        <p class="text-gray-700 mb-4">{item}</p>
                    ))}
                </div>

                <!--Navegación y Entorno Marino-->
                <div id="navegacion">
                    <h2 class="text-3xl font-bold text-gray-800 mb-6">{navegador[4].subtitulo}</h2>
                    
                    {navegacion.parrafos.map((item)=>(
                        <p class="text-gray-700 mb-4">{item}</p>
                    ))}
                </div>
            </div>
        </div>
    </div>
</section>