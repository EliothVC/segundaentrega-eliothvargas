---
import { transparencia } from "../data/Hero.ts";
import { info, ley, dataBarra, pregunta, solicitud, informacion, plazo } from "../data/Transparencia.ts";
---
<!--Sección Hero -->
<section class="py-12 bg-linear-to-r from-red-800 to-red-600 text-white">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4">{transparencia.titulo}</h1>
        <p class="text-lg sm:text-xl md:text-2xl max-w-3xl mx-auto">{transparencia.subtitulo}</p>
    </div>
</section>

<!--Sección Información Principal-->
<section class="py-12 sm:py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!--Columna Principal -->
            <div class="lg:col-span-2">
                <h2 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-6">{info.titulo}</h2>
                <p class="text-gray-600 mb-6">{info.descripcion}</p>

                <div class="bg-blue-50 rounded-lg p-6 mb-8">
                    <h3 class="text-gray-600 mb-4">{info.titulo2}</h3>
                    <p class="text-gray-600">{info.descripcion2}</p>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
                    {ley.map((ley)=>(
                        <div class="bg-gray-50 rounded-lg p-6">
                            <div class="w-12 h-12 rounded-full bg-red-500 text-white flex items-center justify-center mb-4">
                                {ley.id}
                            </div>
                            <h3 class="text-xl font-bold text-gray-800 mb-2">{ley.titulo}</h3>
                            <p class="text-gray-600">{ley.descripcion}</p>
                        </div>
                    ))}
                </div>
            </div>

            <!--Barra Lateral -->
            <div class="space-y-6">
                {dataBarra.tarjetas.map((barra, index)=>(
                    <div class={`rounded-lg p-6 ${barra.claseFondo}`}>
                        <h3 class="text-xl font-bold text-gray-800 mb-4">{barra.titulo}</h3>
                        <p class="text-gray-600 mb-4" set:html={barra.descripcion}></p>
                        {barra.descripcion2 && (
                            <p class="text-gray-600" set:html={barra.descripcion2}></p>
                        )}
                        {barra.boton && barra.href && (
                            <a href={barra.href} class={`inline-block ${barra.claseBoton} text-white font-bold py-2 px-4 rounded transition duration-300 text-sm`}>
                                {barra.boton}
                            </a>
                        )}
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<!--Sección Preguntas Frecuentes -->
<section class="py-12 sm:py-16 bg-gray-100">
    <div class="container mx-auto px-4">
        <h2 class="text-2xl sm:text-3xl font-bold text-center text-gray-800 mb-8">Preguntas Frecuentes</h2>

        <div class="max-w-3xl mx-auto space-y-6">
            {pregunta.map((pregunta)=>(
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h3 class="text-lg font-bold text-gray-800 mb-2">{pregunta.titulo}</h3>
                    <p class="text-gray-600">{pregunta.parrafo}</p>
                </div>
            ))}
        </div>
    </div>
</section>

<!--Sección Solicitud de Información -->
<section class="py-12 sm:py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
            <h2 class="text-2xl sm:text-3xl font-bold text-center text-gray-800 mb-8">Solicitud de Información</h2>
            <p class="text-center text-gray-600 mb-8">Complete el siguiente formulario para solicitar información que no encuentre publicada en nuestro portal</p>

            <div class="bg-gray-50 rounded-lg shadow-sm p-6 sm:p-8">
                <form class="space-y-6">
                    {solicitud.map((solicitud)=>(
                        <div>
                            <div>
                                <label for={solicitud.id} class="block text-sm font-medium text-gray-700 mb-2">{solicitud.label}</label>
                                <input type="text" id={solicitud.id} class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" required />
                            </div>
                        </div>
                    ))}

                    {informacion.map((info)=>(
                        <div>
                            <label for={info.id} class="block text-sm font-medium text-gray-700 mb-2">{info.label}</label>
                            <textarea id={info.id} rows="5" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" placeholder={info.placeholder}></textarea>
                        </div>
                    ))}

                    <div class="bg-blue-50 p-4 rounded-lg">
                        <p class="text-sm text-blue-700">{plazo.parrafo}</p>
                    </div>

                    <button type="submit" class="w-full bg-red-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-300">
                        {plazo.boton}
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>